{
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "reviewers": [
    "yechs"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "^eslint",
        "^@typescript-eslint/",
        "^@types/"
      ],
      "matchPackageNames": [
        "babel-eslint",
        "@babel/eslint-parser",
        "prettier",
        "typescript"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "schedule": [
        "after 4pm on friday"
      ],
      "groupName": "dev-dependencies (non-major)",
      "groupSlug": "dev"
    }
  ]
}
