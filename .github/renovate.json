{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "reviewers": ["yechs"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": [
        "^eslint",
        "^@typescript-eslint/",
        "^@types/",
        "^@tsconfig/"
      ],
      "matchPackageNames": [
        "babel-eslint",
        "@babel/eslint-parser",
        "prettier",
        "typescript",
        "lint-staged",
        "husky"
      ],
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": ["after 12pm on friday"],
      "groupName": "dev-dependencies (non-major)",
      "groupSlug": "dev-dependencies"
    },
    {
      "matchPackageNames": [
        "hast-util-is-element",
        "rehype-katex",
        "remark-math"
      ],
      "groupName": "katex",
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
